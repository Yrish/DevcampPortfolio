<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error, "Bad Input", 5000 %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :blog_title, class: "form-control", placeholder: 'Title' %>
  </div>
  
  <div class="form-group">
    <%= form.radio_button :status, 'draft' %>
    <%= form.label :status, 'Draft' %>
    <br />
    <%= form.radio_button :status, 'published' %>
    <%= form.label :status, 'Publish' %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <% if @topics.each.count > 0 %>
      <%= form.collection_select(:topic_id, Topic.all, :id, :title, {selected: blog.topic.id, include_blank: true}, class: 'form-control') %>
    <% end %>
    <%= link_to "+ add topic", new_topic_path %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, id: :blog_body, class: "form-control", rows: 15, placeholder: 'content' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
