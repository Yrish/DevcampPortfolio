<div class="col-sm-8 blog-main">
  
  <h2><%= @blog.title %></h2>
  
  <div><%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %></div>
  <div class="text-right comment-attributes">Topic: <%= @blog.topic.title %></div>
  
  <p>
    <%= @blog.body %>
  </p>
  
  <!--start comment form-->
  <%= render "comments/comment_form" %>
  <!--end comment form-->
  
  <!--start comments-->
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

  <!--end comments-->
</div>



