<div class="col-sm-8 blog-main">
  
  <h2><%= @blog.title %></h2>
  
  <a><%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %></a>
  
  <p>
    <%= @blog.body %>
  </p>
  
  <!--start comment form-->
  <% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <%= f.submit 'Post Comment', class: 'btn btn-success' %>
    <% end %>
  <% end %>
  <!--end comment form-->
  
  <!--start comments-->
  <%= render @blog.comments %>

  <!--end comments-->
</div>



