<div class="col-sm-8 blog-main">
    <%= form_for(@topic, url: create_topic_path) do |f| %>
      <% if @topic.errors.any? %>
        <% @topic.errors.full_messages.each do |error| %>
          <%= alert_generator error, "Bad Input", 5000 %>
        <% end %>
      <% end %>
      
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
    
          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-success btn-block" %>
          </div>
      <% end %>
 </div>