<% if blog.published? || logged_in?(:site_admin) %>
    <div class="blog-post">
        <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %>  </h2>
        <%= render partial: "blogs/admin_actions", locals: {blog: blog} if logged_in?(:site_admin)%>
        <p class="blog-post-meta"><%= "Published #{distance_of_time_in_words(blog.created_at, Time.now)} ago "%></p>
        
        <p>
            <%= blog.body %>
        </p>
    </div>
<% end %>