<%= form_for(portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-grou">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control"%>
      </div>
      
      <div class="form-group main-img">
        <%= f.file_field :main_image %>
      </div>
    </div>
    <div class="col-md-6">
      <h4>Technologies</h4>
      <ul class= "form-group">
        <%= f.fields_for :technologies do |technology_form| %>
          <li>
            <%= technology_form.text_field :name, class: "form-control" %>
          </li>
        <% end %>
      </ul>
      <div class="form-group thumb-img">
        <%= f.file_field :thumb_image %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success btn-block" %>
  </div>
<% end %>