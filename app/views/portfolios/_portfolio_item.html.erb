<div class="card" data-id="<%= portfolio_item.id %>">
    <p class="text-center">
        <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
    </p>
    <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
    <p class="card-text">
        <%= portfolio_item.subtitle %>
    </p>

    <% if logged_in?(:site_admin) %>
        <p class="card-text">
            <%= link_to "Edit", edit_portfolio_path(portfolio_item.id)%> | 
            <%= link_to "Destroy Portfolio", portfolio_path(portfolio_item), method: :delete, data: {}%>
        </p>
    <% end %>


</div>